  <div class="cook-add-contents">
    <div class="cook-header">
      <%= link_to(dinners_path, class: 'cook-btn') do %>
        <%= image_tag 'cook.png' , size: '90x90' ,class: "cook-btn-icon" %>
      <% end%>
    </div>

    <div class="cook-main">
      <div class="cook-recipe">Today's dinner!!
      <% @random.each do |menu| %>
        <div class="today-dinner">
          <span><%= menu.main_name %></span>＋<span><%= menu.salad_name %></span>＋<span><%= menu.soup_name %></span>
        </div>
        <div class="f-name">
          〜<%= menu.main_name %>の作り方〜
        </div>
        <div class="f-recipe">
          <%= menu.main_recipe %>
        </div>

        <div class="f-name">
          〜<%= menu.salad_name %>の作り方〜
        </div>
        <div class="f-recipe">
          <%= menu.salad_recipe %>
        </div>
        <div class="f-name">
          〜<%= menu.soup_name %>の作り方〜
        </div>
        <div class="f-recipe">
          <%= menu.soup_recipe %>
        </div>
      <% end %>
      </div>
      <div class="cook-content">
      </div>

      <h2 class="menus-add-title">Let's record the dinner !!</h2>

     <%= form_with url:"#", local: true do |f| %>

        <div class="cook-image">
          <div class="cook-weight-bold-text">
            cooking photo
          </div>
          <%= f.text_area :image, class:"form-text", id:"item-info", placeholder:"作り方" , size:"90x10" %> 
        </div>

      <div class="cook-impression">
        <div class="cook-weight-bold-text">
          Impressions of cooking 
        </div>
        <%= f.text_area :impression, class:"form-text", id:"cook-info", placeholder:"感想", size:"90x10" %> 
      </div> 

      <div class="cook-btn-contents">
          <%= image_submit_tag "cook.png", size: '80x80', class: "cook-btn" %>
        <%= link_to(root_path, class: 'stop-btn') do %>
          <%= image_tag 'stop.png', size: '75x75', class: "stop-btn-icon" %>
        <% end %>
      </div>

      <div class="cook-btn-comment">
        <div class="cook-comment">record to dinner</div>
        <div class="cook-stop-comment">quit </div>
      </div>

      <% end %>

    </div>

    <div class="cook-footer">
    </div>
 </div>
